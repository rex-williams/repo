name='make'
desc='GNU make utility to maintain groups of programs'
version='4.4.1'
sources="https://ftp.gnu.org/gnu/make/make-${version}.tar.gz"
build() {
export CFLAGS="$CFLAGS -std=c17"
export LDFLAGS="$LDFLAGS -static"

./configure \
    --prefix=/usr \
    --disable-nls

make
make DESTDIR="$INSTALL" install
}
