name='gmp'
desc='A free library for arbitrary precision arithmetic'
version='6.3.0'
depends=''
sources="https://gmplib.org/download/gmp/gmp-${version}.tar.xz"
build() {
export CFLAGS="$CFLAGS -std=c17"

./configure \
    --prefix=/usr \
    --localstatedir=/var/state/gmp \
    --enable-cxx \
    --enable-fat \
    --with-pic

make
make DESTDIR="$INSTALL" install
}
